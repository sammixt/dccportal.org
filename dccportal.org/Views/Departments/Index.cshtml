<div class="content-body">
    <section id="basic-datatable">
        <div class="row">
            <div class="col-8">

                <div class="card">
                    <div class="card-header border-bottom">
                        <h4 class="card-title"> @ViewBag.PageName</h4>
                    </div>
                    <div class="card-body">
                        <table id="dept_list" class="table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Department</th>
                                    <th>Description</th>
                                    <th>ShortCode</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Department</h4>
                    </div>
                    <div class="card-body">
                        <form id="new-department-form" class="form form-vertical">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="vertical-dept-name">Department Name</label>
                                        <input type="text" id="vertical-dept-name" class="form-control" placeholder="John" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="vertical-dept-desc">Department Description</label>
                                         <input type="text" id="vertical-dept-desc" class="form-control" placeholder="John" />
                                    </div>
                                </div>
                                 <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="vertical-dept-desc">Department Vision</label>
                                         <input type="text" id="vertical-dept-vision" class="form-control" placeholder="John" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="vertical-dept-desc">Department Short Code</label>
                                         <input type="text" id="vertical-dept-shortcode" class="form-control" placeholder="John" />
                                    </div>
                                </div>
                                
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary mr-1 btn-submit">Submit</button>
                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal to add new user starts-->
            <div class="modal modal-slide-in new-user-modal fade" id="modal-slide-in">
                <div class="modal-dialog">
                    <form id="edit-user-form" class="edit-user modal-content pt-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">Ã—</button>
                        <div class="modal-header mb-1">
                            <h5 class="modal-title" id="exampleModalLabel">Edit Department</h5>
                        </div>
                        <div class="modal-body flex-grow-1">
                            <div class="form-group">
                                <label class="form-label" for="vertical-dept-name">Department Name</label>
                                <input type="text" id="dept-name" class="form-control" placeholder="John" />
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="vertical-dept-desc">Department Description</label>
                                <input type="text" id="dept-desc" class="form-control" placeholder="John" />
                                <input type="hidden" id="setDeptIdString"/>
                            </div>
                            <div class="form-group">
                                    <label class="form-label" for="vertical-dept-desc">Department Vision</label>
                                    <input type="text" id="dept-vision" class="form-control" placeholder="John" />
                            </div>
                             <div class="form-group">
                                <label class="form-label" for="vertical-dept-desc">Department Short Code</label>
                                <input type="text" id="dept-shortcode" class="form-control" placeholder="John" />
                            </div>
                           
                            <button type="submit" class="btn btn-primary mr-1 data-submit">Submit</button>
                            <button type="reset" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Modal to add new user Ends-->
  

    </section>
</div>

